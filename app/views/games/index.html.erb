      <div class="con">
        <div class="card h-100 border-0 shadow-sm hover-effect">
          <div class="card-header bg-dark text-white">
            <h5 class="card-title mb-0"><%= game.title %></h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <span class="badge bg-primary me-2"><%= game.genre %></span>
              <span class="badge bg-secondary"><%= game.platform %></span>
            </div>
            <p class="card-text">
              <i class="bi bi-people-fill text-muted"></i> <%= game.developer %>
            </p>
            <p class="card-text">
              <i class="bi bi-calendar-event text-muted"></i> <%= game.release_date %>
            </p>
          </div>
          <div class="card-footer bg-transparent border-top-0">
            <div class="d-flex justify-content-between">
