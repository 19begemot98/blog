
<%= stylesheet_link_tag "show", "data-turbo-track": "reload" %>
<div class="game-show-container">
  <div class="game-card-wrapper">
    <div class="game-header">
      <h1 class="game-title"><%= @game.title %></h1>
    </div>

    <div class="game-content">
     

      <div class="game-info">
        <h2 class="section-title">Информация об игре</h2>
        
        <div class="info-grid">
          <div class="info-item">
            <div class="info-icon">
              <i class="bi bi-building"></i>
            </div>
            <div class="info-content">
              <span class="info-label">Разработчик</span>
              <span class="info-value"><%= @game.developer %></span>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="bi bi-tags"></i>
            </div>
            <div class="info-content">
              <span class="info-label">Жанр</span>
              <span class="info-value genre-badge"><%= @game.genre %></span>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="bi bi-laptop"></i>
            </div>
            <div class="info-content">
              <span class="info-label">Платформа</span>
              <span class="info-value platform-badge"><%= @game.platform %></span>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="bi bi-calendar"></i>
            </div>
            <div class="info-content">
              <span class="info-label">Дата выхода</span>
              <span class="info-value"><%= @game.release_date.strftime("%d.%m.%Y") if @game.release_date %></span>
            </div>
          </div>
        </div>

        <div class="game-actions">
          <%= link_to games_path, class: "btn back-btn" do %>
            <i class="bi bi-arrow-left"></i> Назад к списку
          <% end %>
          <%= link_to edit_game_path(@game), class: "btn edit-btn" do %>
            <i class="bi bi-pencil"></i> Редактировать
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

