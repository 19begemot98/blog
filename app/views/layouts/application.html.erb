  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container" style="margin-bottom: 20px;">
      
      

      <div class="collapse navbar-collapse" id="navbarContent">
        <div class="navbar-nav me-auto">
          <div class="box">
          <% if user_signed_in? %>
            <%= link_to games_path, class: "nav-link d-flex align-items-center gap-1" do %>
              <i class="bi bi-joystick"></i> Все игры
            <% end %>
          <% end %>
          </div>
        </div>

        <div class="navbar-nav ms-auto d-flex align-items-center gap-2">
          <% if user_signed_in? %>
            <span class="nav-link disabled small px-3 py-1 rounded-pill bg-secondary text-white me-2">Привет, <%= current_user.email %>!</span>
            <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-outline-light btn-sm d-flex align-items-center gap-1" do %>
